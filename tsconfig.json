{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/decorators", "@sapphire/ts-config/bundler"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"paths": {
			"#schemas": ["./src/lib/schemas"],
			"#lib/*": ["./src/lib/*"],
			"#root/*": ["./*"],
		}
	},
	"include": ["src"]
}
